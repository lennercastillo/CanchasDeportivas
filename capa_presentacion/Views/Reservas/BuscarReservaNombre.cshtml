
@model List<capa_entidad.CE_Reservas>

@{
    ViewData["Title"] = "Gestión de Reservas";
}

<div class="container mt-5">

    <div class="card shadow border-0">

        <div class="card-header bg-primary text-white py-3 d-flex justify-content-between align-items-center">
            <h3 class="card-title mb-0 h5">
                <i class="bi bi-calendar-range me-2"></i>Gestión de Reservas
            </h3>
            <a asp-action="InsertarReservas" class="btn btn-light text-primary fw-bold btn-sm shadow-sm">
                <i class="bi bi-plus-lg"></i> Nueva Reserva
            </a>
        </div>

        <div class="card-body p-4">

            <div class="row mb-4">
                <div class="col-md-8 col-lg-6">
                    <form asp-controller="Reservas" asp-action="BuscarReservaNombre" method="post">
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="bi bi-search text-muted"></i>
                            </span>

                            <input type="text"
                                   name="BuscarReservaNombre"
                                   class="form-control border-start-0 bg-light"
                                   placeholder="Buscar por nombre de cliente..."
                                   required />

                            <button type="submit" class="btn btn-primary">Buscar</button>

                            <a asp-action="ListarReservas" class="btn btn-outline-secondary" title="Ver todos">
                                <i class="bi bi-arrow-counterclockwise"></i>
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="table-responsive">
                @if (Model != null && Model.Any())
                {
                    <table class="table table-hover table-bordered align-middle">
                        <thead class="table-light text-uppercase small text-muted">
                            <tr>
                                <th>Cod.</th>
                                <th>Cancha</th>
                                <th>Fecha</th>
                                <th class="text-center">Inicio</th>
                                <th class="text-center">Fin</th>
                                <th>Cliente</th>
                                <th>Comentario</th>
                                <th class="text-center" style="width: 150px;">Acciones</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var reserva in Model)
                            {
                                <tr>
                                    <td class="fw-bold text-secondary">#@reserva.IdReserva</td>

                                    <td>
                                        <span class="badge bg-info bg-opacity-10 text-primary border border-info">
                                            <i class="bi bi-trophy-fill me-1"></i>@reserva.NombreCancha
                                        </span>
                                    </td>

                                    <td>
                                        <div class="d-flex flex-column">
                                            <span class="fw-bold">@reserva.FechaReserva.ToShortDateString()</span>
                                        </div>
                                    </td>

                                    <td class="text-center font-monospace small">@reserva.HoraInicio</td>
                                    <td class="text-center font-monospace small">@reserva.HoraFin</td>

                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-person-circle text-secondary me-2 fs-5"></i>
                                            <span class="fw-semibold">@reserva.NombreCliente</span>
                                        </div>
                                    </td>

                                    <td class="text-muted small fst-italic text-truncate" style="max-width: 180px;" title="@reserva.Comentario">
                                        @reserva.Comentario
                                    </td>

                                    <td class="text-center">
                                        <div class="btn-group shadow-sm" role="group">
                                            <a asp-action="Actualizar" asp-route-id="@reserva.IdReserva" class="btn btn-warning btn-sm text-white" title="Editar">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>

                                            <form asp-action="Eliminar" method="post" asp-route-id="@reserva.IdReserva" class="d-inline" onsubmit="return confirm('¿Estás seguro de que deseas eliminar la reserva #@reserva.IdReserva?');">
                                                <button type="submit" class="btn btn-danger btn-sm" title="Eliminar" style="border-top-left-radius: 0; border-bottom-left-radius: 0;">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-warning text-center mt-4 p-4" role="alert">
                        <div class="fs-1 text-warning mb-2"><i class="bi bi-exclamation-circle"></i></div>
                        <h5>No se encontraron resultados</h5>
                        <p class="mb-0">No hay reservas que coincidan con la búsqueda.</p>
                        <a asp-action="ListarReservas" class="btn btn-sm btn-outline-dark mt-3">Ver todas las reservas</a>
                    </div>
                }
            </div>

        </div>
    </div>
</div>