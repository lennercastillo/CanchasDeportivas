@model capa_entidad.CE_Canchas
@{
    ViewData["Title"] = "ActualizarCancha";
}

<h1>Actualizar Cancha</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Actualizar" method="post" class="container">
            <input type="hidden" asp-for="IdCancha" />

            <section class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for=Nombre" class="text-danger"></span>
            </section>
            <section class="mb-3">
                <label asp-for="Tipo" class="form-label"></label>
                <input asp-for="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </section>

            <section class="mb-3">
                <label asp-for="PrecioPorHora" class="form-label"></label>
                <input asp-for="PrecioPorHora" class="form-control" />
                <span asp-validation-for="PrecioPorHora" class="text-danger"></span>
            </section>

            <div>
                <section class="mb-3">
                    <label asp-for="Estado" class="col-form-label"></label>
                    <input asp-for="Estado" class="col-form-label" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </section>
            </div>



            <button type="submit" class="btn btn-primary">Actualizar</button>
            <a asp-action="ListarCanchas" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>



