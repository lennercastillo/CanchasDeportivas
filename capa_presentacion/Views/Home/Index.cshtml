@{
    ViewData["Title"] = "Panel de Control";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">Sistema de Gestión</h1>
        <p class="lead text-muted">Utilice los accesos directos para comenzar la administración.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card shadow-lg border-primary border-3">
                <div class="card-header bg-primary text-white fw-bold text-center py-3">
                    <i class="bi bi-lightning-charge-fill me-2"></i> **ACCIONES RÁPIDAS**
                </div>
                <div class="card-body d-grid gap-3 p-4">

                    <a asp-controller="Reservas" asp-action="InsertarReservas" class="btn btn-success btn-lg py-3">
                        <i class="bi bi-calendar-plus-fill me-2"></i> CREAR NUEVA RESERVA
                    </a>

                    <a asp-controller="Canchas" asp-action="ListarCanchas" class="btn btn-outline-primary btn-lg py-3">
                        <i class="bi bi-pin-map-fill me-2"></i> GESTIONAR CANCHAS
                    </a>

                    <a asp-controller="Clientes" asp-action="ListarClientes" class="btn btn-outline-secondary btn-lg py-3">
                        <i class="bi bi-people-fill me-2"></i> GESTIONAR CLIENTES
                    </a>

                    <a asp-controller="Reportes" asp-action="Index" class="btn btn-outline-info btn-lg py-3">
                        <i class="bi bi-graph-up-arrow me-2"></i> VER TIPOS DE RESERVAS
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>